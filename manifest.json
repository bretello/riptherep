{
  "manifest_version": 2,

  "name": "RiptheRep",
  "description": "This extension allows the user to unlock some of the content of rep.repubblica.it.",
  "version": "0.1",

  "content_scripts": [
     {
	"matches": "http://rep.repubblica.it",
	"js": "/content_script.js"
     }
  ]

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
